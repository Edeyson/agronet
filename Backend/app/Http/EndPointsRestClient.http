# 01
# Registrar Usuario Publico
# url: POST /api/v1/register
POST http://localhost:8000/api/register
content-type: application/json
Accept: application/json

{
    "data" : {
        "type" : "User",
        "attributes" : {
            "nombre" : "Cliente Paco 3",
            "apellido" : "Caceres",
            "email": "paco3@gmail.com",
            "password" : "password",
            "nameToken" : "movil",
            "departamento" : "Caldas",
            "ciudad" : "Manizales",
            "telefono" : "3012345678"
        }
    }
}

